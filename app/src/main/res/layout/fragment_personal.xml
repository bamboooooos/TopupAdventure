<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.PersonalFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/v_personal_center"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/sharp_bag"
            android:layout_toLeftOf="@id/v_personal_center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            >

            <Button
                android:id="@+id/btn_unload_one"
                android:layout_alignParentRight="true"
                android:layout_width="28dp"
                android:layout_height="32dp"
                android:text="卸下装备"
                android:textSize="10dp"
                android:background="@drawable/sharp_person"
                />

            <Button
                android:id="@+id/btn_unload_all"
                android:layout_alignParentRight="true"
                android:layout_below="@id/btn_unload_one"
                android:layout_marginTop="10dp"
                android:layout_width="28dp"
                android:layout_height="32dp"
                android:text="一键卸下"
                android:textSize="10dp"
                android:background="@drawable/sharp_person"
                />

            <!--  人物装备格及半透明覆盖高亮  -->
            <ImageView
                android:src="@mipmap/personal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />
            <ImageView
                android:id="@+id/iv_personal_head"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/sharp_person"
                android:src="@drawable/fusion"
                />
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_select_head"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignLeft="@id/iv_personal_head"
                android:layout_alignTop="@id/iv_personal_head"
                android:background="#33006699"
                />
            <ImageView
                android:id="@+id/iv_personal_left_hand"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toLeftOf="@id/iv_personal_head"
                android:layout_marginRight="-5dp"
                android:layout_marginTop="110dp"
                android:background="@drawable/sharp_person"
                />
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_select_left_hand"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignLeft="@id/iv_personal_left_hand"
                android:layout_alignTop="@id/iv_personal_left_hand"
                android:background="#33006699"
                />
            <ImageView
                android:id="@+id/iv_personal_right_hand"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/iv_personal_head"
                android:layout_marginLeft="-12dp"
                android:layout_marginTop="110dp"
                android:background="@drawable/sharp_person"
                />
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_select_right_hand"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignLeft="@id/iv_personal_right_hand"
                android:layout_alignTop="@id/iv_personal_right_hand"
                android:background="#33006699"
                />
            <ImageView
                android:id="@+id/iv_personal_left_weapon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toLeftOf="@id/iv_personal_head"
                android:layout_marginRight="10dp"
                android:layout_marginTop="170dp"
                android:background="@drawable/sharp_person"
                />
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_select_left_weapon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignLeft="@id/iv_personal_left_weapon"
                android:layout_alignTop="@id/iv_personal_left_weapon"
                android:background="#33006699"
                />
            <ImageView
                android:id="@+id/iv_personal_right_weapon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/iv_personal_head"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="170dp"
                android:background="@drawable/sharp_person"
                />
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_select_right_weapon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignLeft="@id/iv_personal_right_weapon"
                android:layout_alignTop="@id/iv_personal_right_weapon"
                android:background="#33006699"
                />
            <ImageView
                android:id="@+id/iv_personal_left_shoe"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toLeftOf="@id/iv_personal_head"
                android:layout_marginRight="7dp"
                android:layout_marginTop="250dp"
                android:background="@drawable/sharp_person"
                />
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_select_left_shoe"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignLeft="@id/iv_personal_left_shoe"
                android:layout_alignTop="@id/iv_personal_left_shoe"
                android:background="#33006699"
                />
            <ImageView
                android:id="@+id/iv_personal_right_shoe"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/iv_personal_head"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="250dp"
                android:background="@drawable/sharp_person"
                />
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_select_right_shoe"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignLeft="@id/iv_personal_right_shoe"
                android:layout_alignTop="@id/iv_personal_right_shoe"
                android:background="#33006699"
                />
            <ImageView
                android:id="@+id/iv_personal_pants"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignLeft="@id/iv_personal_head"
                android:layout_marginLeft="-5dp"
                android:layout_marginTop="200dp"
                android:background="@drawable/sharp_person"
                />
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_select_pants"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignLeft="@id/iv_personal_pants"
                android:layout_alignTop="@id/iv_personal_pants"
                android:background="#33006699"
                />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_personal_bag"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/v_personal_center"
            android:background="@drawable/sharp_bag"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>

</FrameLayout>