<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/xml_rv_item">

    <ImageView
        android:id="@+id/iv_thing_bag"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/fusion"
        android:background="@drawable/sharp_bag"
        />

    <TextView
        android:id="@+id/tv_item_times"
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#006699"
        android:textSize="15dp"
        android:layout_alignBottom="@id/iv_thing_bag"
        android:layout_alignRight="@id/iv_thing_bag"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="1dp"
        />

</RelativeLayout>
